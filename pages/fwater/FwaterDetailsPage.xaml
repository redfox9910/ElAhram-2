        <Label x:Name="fatorakodlabel" HorizontalAlignment="Left" Margin="351,25,0,0" Content=""  VerticalAlignment="Top" Width="86" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="18" Padding="0,0,0,0" FlowDirection="RightToLeft"/>
        <Label Content=": عميل " HorizontalAlignment="Left" Margin="475,68,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Label x:Name="fatora2sm3melLabel" Content="" HorizontalAlignment="Left" Margin="290,67,0,0" VerticalAlignment="Top" Width="148" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="26" FlowDirection="RightToLeft"/>
