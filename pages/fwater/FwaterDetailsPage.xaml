        <Label x:Name="TotalNew7sab" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="72,329,0,0"/>
        <Button
                    Command="{Binding PrintCommand}"
                    CommandParameter="{Binding ElementName=fatoraDetailsDG}"
                    Width="72"
                    HorizontalAlignment="Left" BorderBrush="{x:Null}" Cursor="Hand" Height="75" VerticalAlignment="Top" Foreground="{x:Null}" Margin="26,17,0,0" Visibility="Visible" InputScope="PhraseList" >
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/pic/printer.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
