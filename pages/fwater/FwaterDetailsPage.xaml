        <Label x:Name="totalFatoraLabel" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="11,165,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FlowDirection="RightToLeft" Padding="1,1,1,1"/>
